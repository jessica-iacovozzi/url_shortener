<%= form_with model: link, data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset"} do |form| %>
  <div class="flex gap-3 items-center">
    <%= form.url_field :url, required: true, autofocus: true, placeholder: "https://yoururl.com", class: "rounded flex-grow" %>
    <%= form.button "Save", class: "px-3 py-2 rounded-md bg-gray-100 hover:bg-gray-200 transition duration-200" %>
  </div>
<% end %>

<h1 class="flex justify-center text-2xl py-5">Forgot your password?</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field flex justify-center">
    <%= f.email_field :email, autofocus: true, placeholder: "Enter your email address", class: "rounded w-3/5 mt-5" %>
  </div>

  <div class="actions flex justify-center">
    <%= f.submit "Send me reset password instructions", class: "mt-4 mb-64 px-4 hover:cursor-pointer py-1.5 rounded bg-gray-100 hover:bg-gray-200 transition duration-200 no-underline" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

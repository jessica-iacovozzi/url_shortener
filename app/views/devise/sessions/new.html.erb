<h1 class="flex items-center justify-center text-center gap-3 text-2xl py-4">
  Sign in to your ShortURL account
  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 hidden lg:block">
    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6L9 12.75l4.286-4.286a11.948 11.948 0 014.306 6.43l.776 2.898m0 0l3.182-5.511m-3.182 5.51l-5.511-3.181" />
  </svg>
</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field flex justify-center">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "rounded w-3/5 mt-5" %>
  </div>

  <div class="field flex justify-center">
    <%= f.password_field :password, placeholder: "Password", class: "rounded w-3/5 mt-5" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field flex justify-center items-center gap-1 ms-3">
      <%= f.check_box :remember_me, class: "rounded mt-5" %>
      <%= f.label :remember_me, class: "w-3/5 mt-5" %>
    </div>
  <% end %>

  <div class="actions flex justify-center">
    <%= f.submit "Sign in", class: "my-4 px-4 hover:cursor-pointer py-1.5 rounded bg-gray-100 hover:bg-gray-200 transition duration-200 no-underline" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
